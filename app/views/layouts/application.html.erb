<!DOCTYPE html>
<html>
  <head>
    <title>EddiEATs</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="container">
  		<nav class="navbar navbar-light bg-faded">
  			<a class="navbar-brand" href="/">eddiEATs</a>
  			<ul class="nav navbar-nav">
  				<li class="nav-item active">
              <%= link_to 'Menu', menu_path, class: 'btn btn-default' %>
  				</li>
  				<li class="nav-item">
              <%= link_to 'Contact Us', contact_us_path, class: 'btn btn-default' %>
  				</li>
          <li class="nav-item">
              <%= link_to 'About Us', about_us_path, class: 'btn btn-default' %>
          </li>          
  			</ul>
  			<form class="form-inline pull-xs-right">
  				<input class="form-control" type="text" placeholder="Search">
  				<button class="btn btn-outline-success" type="submit">Search</button>
  			</form>
  		</nav>
    	<%= yield %>
    </div>
  </body>
</html>
